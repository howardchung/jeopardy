{
  "name": "jeopardy",
  "version": "0.1.2",
  "private": true,
  "scripts": {
    "start": "node server/server.ts",
    "ui": "vite --host",
    "dev": "node --watch-path server server/server.ts",
    "build": "npm run buildReact && npm run typecheckServer",
    "buildReact": "vite build && npm run typecheck",
    "typecheckServer": "tsc --project server/tsconfig.json",
    "typecheck": "tsc --project src/tsconfig.json --noEmit",
    "prettier": "npx prettier --write .",
    "analyze": "npx source-map-explorer 'build/assets/*.js' --html result.html --no-border-checks",
    "updateEps": "curl -sSL -O https://github.com/howardchung/j-archive-parser/raw/release/jeopardy.json.gz"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.7",
    "hono": "^4.11.3",
    "ioredis": "^5.8.2",
    "openai": "^6.19.0",
    "papaparse": "^5.5.3",
    "socket.io": "^4.8.3"
  },
  "devDependencies": {
    "@tabler/icons-react": "^3.36.1",
    "@types/node": "^25.0.3",
    "@types/papaparse": "^5.5.2",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@mantine/core": "^8.3.10",
    "react": "^18.3.1",
    "react-countup": "^6.5.3",
    "react-dom": "^18.3.1",
    "socket.io-client": "^4.8.3",
    "typescript": "^5.9.3",
    "vite": "^7.3.0"
  },
  "type": "module",
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": "24"
  }
}
